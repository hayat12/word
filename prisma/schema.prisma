generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String            @id @default(cuid())
  name              String?
  email             String            @unique
  createdAt         DateTime          @default(now())
  dailyGoal         Int               @default(10)
  lastPracticeDate  DateTime?
  preferredLanguage String?
  streakDays        Int               @default(0)
  defaultCategory   String?
  userLevel         LanguageLevel     @default(A1)
  password          String?
  role              UserRole          @default(USER)
  accounts          Account[]
  feedbacks         Feedback[]
  grammarPractices  GrammarPractice[]
  sessions          Session[]
  subscription      Subscription?
  tags              Tag[]
  words             Word[]
  wordProgress      WordProgress[]
  writingPractices  WritingPractice[]
  levelCompletions  LevelCompletion[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id           String             @id @default(cuid())
  userId       String             @unique
  plan         SubscriptionPlan   @default(FREE)
  status       SubscriptionStatus @default(INACTIVE)
  startDate    DateTime           @default(now())
  endDate      DateTime?
  trialEndDate DateTime?
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Feedback {
  id        String   @id @default(cuid())
  title     String
  content   String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Word {
  id           String         @id @default(cuid())
  word         String
  translation  String
  example      String?
  language     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId       String
  lastReviewed DateTime?
  level        Int            @default(1)
  nextReview   DateTime?
  reviewCount  Int            @default(0)
  approvalStatus WordApprovalStatus @default(PENDING)
  approvedAt   DateTime?
  approvedBy   String?
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  progress     WordProgress[]
  tags         Tag[]          @relation("WordTags")
}

model Tag {
  id          String   @id @default(cuid())
  name        String
  color       String?
  description String?
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  words       Word[]   @relation("WordTags")

  @@unique([name, userId])
}

model WordProgress {
  id        String   @id @default(cuid())
  wordId    String
  userId    String
  studiedAt DateTime @default(now())
  isCorrect Boolean
  answer    String?
  timeSpent Int?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  word      Word     @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([wordId, userId, studiedAt])
}

model GrammarRule {
  id          String            @id @default(cuid())
  title       String
  description String
  language    String
  level       LanguageLevel     @default(A1)
  category    String
  examples    String[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  practices   GrammarPractice[]
}

model GrammarPractice {
  id            String                   @id @default(cuid())
  userId        String
  grammarRuleId String
  createdAt     DateTime                 @default(now())
  lastPracticed DateTime?
  practiceCount Int                      @default(0)
  grammarRule   GrammarRule              @relation(fields: [grammarRuleId], references: [id], onDelete: Cascade)
  user          User                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  attempts      GrammarPracticeAttempt[]

  @@unique([userId, grammarRuleId])
}

model GrammarPracticeAttempt {
  id           String          @id @default(cuid())
  practiceId   String
  userInput    String
  isCorrect    Boolean
  aiFeedback   String?
  errorMessage String?
  createdAt    DateTime        @default(now())
  practice     GrammarPractice @relation(fields: [practiceId], references: [id], onDelete: Cascade)
}

model WritingPractice {
  id          String   @id @default(cuid())
  userId      String
  title       String?
  content     String   // Max 250 words
  language    String   @default("German")
  userLevel   LanguageLevel
  aiFeedback  String?  // Max 10 feedback points
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LevelCompletion {
  id          String        @id @default(cuid())
  userId      String
  level       LanguageLevel
  completedAt DateTime      @default(now())
  score       Int?          // Optional score for the level
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, level])
}

enum LanguageLevel {
  A1
  A2
  B1
  B2
  C1
  C2
}

enum UserRole {
  GUEST
  USER
  ADMIN
}

enum SubscriptionPlan {
  FREE
  TRIAL
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  EXPIRED
}

enum WordApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}
